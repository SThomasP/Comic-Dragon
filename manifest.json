{
  "manifest_version": 2,
  "name": "Comic Dragon",
  "version": "0.1.0",
  "applications":{
    "gecko":{
      "id":"firefox@comicdragon.org"
    }
  },
  "icons": {
   "48": "icons/icon-48.png",
   "96": "icons/icon-96.png"
 },
 "permissions": ["storage", "activeTab"],
 "description": "Webcomic tracking and page enhancements",
 "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Comic Dragon",
    "default_popup": "pages/popup/popup.html"
  }
}